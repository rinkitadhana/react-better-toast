{
  "name": "react-better-toast",
  "version": "0.1.0",
  "description": "A better toast notification component for React applications with customizable themes and animations.",
  "keywords": [
    "toast",
    "notification",
    "react",
    "alert",
    "message",
    "popup"
  ],
  "homepage": "https://github.com/rinkitadhana/react-better-toast#readme",
  "bugs": {
    "url": "https://github.com/rinkitadhana/react-better-toast/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rinkitadhana/react-better-toast.git"
  },
  "license": "MIT",
  "author": "Rinkit Adhana",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup src/index.ts --watch --onSuccess \"node dist/index.js\"",
    "build": "tsup",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.15",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "rollup": "^2.79.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}
